<?xml version="1.0" encoding="UTF-8"?>
<simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <params>
        <delta_t>0.01</delta_t>
        <end_time>500</end_time>
        <output>membrane</output>
        <frequency>100</frequency>
        <!-- Domain params -->
        <domainOrigin>
            <x>0</x>
            <y>0</y>
            <z>0</z>
        </domainOrigin>
        <domainSize>
            <x>148</x>
            <y>148</y>
            <z>148</z>
        </domainSize>
        <cutoff>4</cutoff>
        <!-- Boundary params -->
        <boundaries>
            <bound_six>soft_reflective</bound_six>
            <bound_six>soft_reflective</bound_six>
            <bound_six>soft_reflective</bound_six>
            <bound_six>soft_reflective</bound_six>
            <bound_six>soft_reflective</bound_six>
            <bound_six>soft_reflective</bound_six>
        </boundaries>
        <!-- Thermostat params -->
        <thermostat>
            <thermoFreq>0</thermoFreq> <!-- 0 means no thermostat -->
            <initialTemp>40</initialTemp>
            <maxTempDelta>20</maxTempDelta>
        </thermostat>
        <!-- Gravity params -->
        <gravity>-0.001</gravity>
    </params>

    <clusters>
        <!-- No Clusters -->
    </clusters>

    <!-- Particle types -->
    <ptypes>
        <ptype type="1">
            <sigma>1.0</sigma>
            <epsilon>1.0</epsilon>
        </ptype>
        <ptype type="2">
            <sigma>1.0</sigma>
            <epsilon>1.0</epsilon>
        </ptype>
    </ptypes>
</simulation>
